{
  "version": 1,
  "projects": {
    "all": {
      "root": "",
      "architect": {
        "build": {
          "builder": "@snuggery/snuggery:glob",
          "options": {
            "include": "@ngx-playwright/*"
          }
        },
        "deploy": {
          "builder": "$direct:./scripts/deploy",
          "configurations": {
            "next": {
              "tag": "next"
            }
          }
        },
        "lint": {
          "builder": "@snuggery/snuggery:execute",
          "options": {
            "package": "eslint",
            "arguments": ["packages", "integration"]
          },
          "configurations": {
            "fix": {
              "arguments": ["--fix", "packages", "integration"]
            }
          }
        }
      }
    },
    "integration": {
      "root": "integration",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "aot": true,
            "index": "integration/src/index.html",
            "main": "integration/src/main.ts",
            "outputPath": "integration/dist",
            "polyfills": "integration/src/polyfills.ts",
            "tsConfig": "integration/tsconfig.json"
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "integration:build"
          }
        },
        "test": {
          "builder": "@ngx-playwright/jest:run",
          "options": {
            "config": "integration/jest.e2e-config.js",
            "devServerTarget": "serve"
          }
        }
      }
    },
    "@ngx-playwright/harness": {
      "root": "packages/harness",
      "architect": {
        "build": {
          "builder": "$direct:./scripts/build"
        }
      }
    },
    "@ngx-playwright/jest": {
      "root": "packages/jest",
      "architect": {
        "build": {
          "builder": "$direct:./scripts/build"
        }
      }
    }
  }
}
